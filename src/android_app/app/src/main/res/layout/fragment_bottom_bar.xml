<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.bottomnavigation.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/BottomBar"
    android:layout_width="match_parent"
    android:layout_height="70sp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:outlineAmbientShadowColor="#D6D6D6">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/ic_home_gray_32dp"
            android:gravity="bottom|center_horizontal"
            android:padding="12dp"
            android:text="Inicio"
            android:textAlignment="gravity"
            android:textColor="#646464"
            android:textSize="9sp" />

        <Button
            android:id="@+id/btnMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/ic_public_gray_32dp"
            android:gravity="bottom|center_horizontal"
            android:padding="12dp"
            android:text="Popular"
            android:textAlignment="gravity"
            android:textColor="#646464"
            android:textSize="9sp" />

        <Button
            android:id="@+id/btnPhoto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/ic_camera_alt_gray_32dp"
            android:gravity="bottom|center_horizontal"
            android:padding="12dp"
            android:text="Escanear"
            android:textAlignment="gravity"
            android:textColor="#646464"
            android:textSize="9sp" />

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/ic_person_gray_32dp"
            android:gravity="bottom|center_horizontal"
            android:padding="12dp"
            android:text="Profile"
            android:textAlignment="gravity"
            android:textColor="#646464"
            android:textSize="9sp" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/ic_more_vert_gray_32dp"
            android:gravity="bottom|center_horizontal"
            android:padding="12dp"
            android:text="Mais"
            android:textAlignment="gravity"
            android:textColor="#646464"
            android:textSize="9sp" />

    </LinearLayout>
</com.google.android.material.bottomnavigation.BottomNavigationView>
